<html>

<head>
    <title>Home Page</title>
</head>

<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-sm-12">

                <div class="row">
                    <div class="col-sm-8 text-center">
                        <h1>Add User</h1>
                        <img src="/images/logo.png" alt="">
                    </div>
                    <div class="col-sm-4 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Add User</h5>
                                <form name="addForm" enctype="application/x-www-form-urlencoded">
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <input type="text" class="form-control" id="token" name="token" value="abcdef12345"
                                            aria-describedby="emailHelp" placeholder="Enter Username" required>
                                    </div>
                                    <!-- <a href="./forgot-password">Forgot Password?</a><br><br> -->
                                    <button type="button" onclick="addUser()" class="btn btn-primary btn-block">Submit</button>
                                    <!-- <a href="./register">New User?</a> -->
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    <script>

        function addUser() {
            debugger
            let data = {
                token: addForm.token.value,
            }
            let response = fetch('/', {
                method: 'POST',
                headers: {
                    'Content-type': 'application/json; charset=UTF-8'
                    },
                body: JSON.stringify(data) 
            }).then(response => response.json())
                .then(result =>  {
                    if(result.success){
                        location.href = window.location.origin+'/register?token='+result.CustomerIdentifier
                    }
            });
        }
    </script>

   
</body>

</html>